{
  "model_selection": {
    "primary_metric": "roc_auc",
    "secondary_metrics": ["accuracy", "f1", "precision", "recall"],
    "cv_folds": 5,
    "test_size": 0.2,
    "random_state": 42,
    "min_improvement": 0.01
  },
  "model_configs": {
    "RandomForest": {
      "hyperparameter_tuning": true,
      "param_grid": {
        "n_estimators": [100, 200, 300],
        "max_depth": [10, 20, 30, null],
        "min_samples_split": [2, 5, 10],
        "min_samples_leaf": [1, 2, 4],
        "class_weight": ["balanced", null]
      },
      "default_params": {
        "n_estimators": 200,
        "max_depth": 20,
        "min_samples_split": 2,
        "min_samples_leaf": 1,
        "class_weight": "balanced",
        "random_state": 42,
        "n_jobs": -1,
        "oob_score": true
      },
      "optimization": {
        "max_trees_production": 150,
        "enable_feature_importance": true
      }
    },
    "XGBoost": {
      "hyperparameter_tuning": true,
      "param_grid": {
        "n_estimators": [50, 100, 200],
        "max_depth": [3, 6, 9],
        "learning_rate": [0.01, 0.1, 0.2],
        "subsample": [0.8, 0.9, 1.0]
      },
      "default_params": {
        "n_estimators": 100,
        "max_depth": 6,
        "learning_rate": 0.1,
        "subsample": 0.8,
        "random_state": 42,
        "eval_metric": "logloss"
      },
      "optimization": {
        "early_stopping_rounds": 10,
        "enable_feature_importance": true
      }
    },
    "LogisticRegression": {
      "hyperparameter_tuning": true,
      "param_grid": {
        "C": [0.01, 0.1, 1, 10, 100],
        "penalty": ["l1", "l2"],
        "solver": ["liblinear", "saga"]
      },
      "default_params": {
        "C": 1.0,
        "penalty": "l2",
        "solver": "liblinear",
        "random_state": 42,
        "max_iter": 1000
      },
      "optimization": {
        "enable_coefficient_analysis": true
      }
    }
  },
  "deployment_weights": {
    "RandomForest": 1.0,
    "XGBoost": 0.9,
    "LogisticRegression": 0.8
  }
}